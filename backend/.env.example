# ======= Загальні налаштування API =======
PORT=5000
JWT_SECRET=change_me_dev_secret

# Каталог для завантажених файлів (відносно backend/)
# За замовчуванням backend/uploads
UPLOAD_DIR=./uploads

# Максимальний розмір файлу в МБ (перевірка і на бекенді, і на фронті)
MAX_FILE_MB=10
# або альтернативні імена (підтримуються у коді):
# UPLOAD_MAX_MB=10
# FILE_MAX_MB=10

# Дозволити самостійну реєстрацію без інвайтів (краще false у проді)
ALLOW_SELF_REGISTER=false

# TTL інвайтів у мс (якщо 0/порожньо — безстрокові)
INVITE_TTL_MS=600000

# ======= Підключення до бази PostgreSQL (DEV/PROD) =======
# Приклад для локального docker compose (порт 5432):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/diplomas?schema=public

# ======= ТЕСТОВЕ СЕРЕДОВИЩЕ (.env.test) =======
# Для тестів використовуй окремий файл backend/.env.test з власним портом БД (напр. 5433)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/diplomas_test?schema=public
# JWT_SECRET=test_secret
# PORT=0
# ALLOW_SELF_REGISTER=true
